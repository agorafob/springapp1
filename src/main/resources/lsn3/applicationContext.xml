        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="musicBean"
          class="com.alik.springapp.lsn3.ClassicalMusic">
    </bean>

    <bean id="musicPlayer3" class="com.alik.springapp.lsn3.MusicPlayer">
